<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="text-center display-2">Hi <%= @user.first_name %> <%= @user.last_name %></h1>
      <p>Create a new Organization</p>
      <form action="/create" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
          <label for="">Org Name:</label>
          <input type="text" name="name" class="form-control col-4">
        </div>
        <div class="form-group">
          <label for="">Description:</label>
          <input type="text" name="description" class="form-control col-4">
          <button class="btn btn-primary my-3">Create</button>
        </div>
      </form>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Organization</th>
            <th>Description</th>
            <th>Memebers</th>
          </tr>
        </thead>
        <tbody>
          <% @organizations.each do |organization| %>
          <tr>
            <th scope="row"><a href="/groups/<%= organization.id %>"><%= organization.name %></a></th>
            <td><%= organization.description %></td>
            <td><%= organization.memberships.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
